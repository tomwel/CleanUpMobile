<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.clean_up_mobile.ClassificaServicoActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/editTextComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ratingBarClassificaServico"
        android:ems="10"
        android:hint="Deixe um comentÃ¡rio"
        android:inputType="textMultiLine" />

    <RatingBar
        android:id="@+id/ratingBarClassificaServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextComentario"
        android:layout_marginTop="18dp"
        android:numStars="5"
        android:stepSize="1" />

</RelativeLayout>