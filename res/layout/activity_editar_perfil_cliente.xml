<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.clean_up_mobile.activity.EditarPerfilClienteActivity" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextEditarNome"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:text="Editar Perfil"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextEditarNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerEdicaoCidadeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextEditarTelefone"
        android:layout_marginTop="17dp" />

    <EditText
        android:id="@+id/editTextEditarTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextEditarNome"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Telefone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextEditarEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinnerEdicaoCidadeCliente"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextEditarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextEditarEmail"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Nova Senha"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonConcluirEdicaoPerfil"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextEditarSenha"
        android:background="@layout/layout_button_azul_ok"
        android:text="@string/btnConfirmar"
        android:layout_marginTop="20px"
        android:textColor="@color/branco" />

    <Button
        android:id="@+id/buttonCancelarEdicaoPerfil"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextEditarSenha"
        android:background="@color/gray"
        android:layout_marginTop="20px"
        android:text="@string/btnCancelar"
        android:textColor="@color/branco" />

</RelativeLayout>
