<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#80FFFFFF" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewDiaristaDetalhe"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_diarista" />

    <TextView
        android:id="@+id/textViewNomeDiaristaDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageViewDiaristaDetalhe"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewCodigoDiarista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewCidadeDiaristaDetalhe"
        android:text="Especialidades:" />

    <TextView
        android:id="@+id/textViewEspecialidadesDiaristaDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewDiaristaDetalhe"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewCodigoDiarista"
        android:layout_alignParentLeft="true"
        android:text="Cidade:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewCidadeDiaristaDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewNomeDiaristaDetalhe"
        android:layout_below="@+id/textViewNomeDiaristaDetalhe"
        android:layout_toRightOf="@+id/textView4"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Data:" />

    <EditText
        android:id="@+id/editTextDataServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonCancelarDiarista"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:enabled="false"
        android:inputType="date" >

    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextDataServico"
        android:text="Descrição:" />

    <EditText
        android:id="@+id/editTextDescricaoServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextDescricaoServico"
        android:text="Endereço:" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextEnderecoServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="14dp"
        android:ems="10" />

    <Button
        android:id="@+id/buttonConfirmarDiarista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/autoCompleteTextEnderecoServico"
        android:layout_marginRight="32dp"
        android:layout_marginTop="14dp"
        android:text="Confirmar" />

    <Button
        android:id="@+id/buttonCancelarDiarista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConfirmarDiarista"
        android:layout_alignBottom="@+id/buttonConfirmarDiarista"
        android:layout_toRightOf="@+id/textView3"
        android:text="Cancelar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEspecialidadesDiaristaDetalhe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Contratar Diarista"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonCalendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextDataServico"
        android:layout_alignBottom="@+id/editTextDataServico"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Selecionar Data" />

</RelativeLayout>
</ScrollView>